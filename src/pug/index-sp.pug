extends partial/_layout

block vars
  - var pageClass   = ''
  - var title       = ''
  - var description = ''
  - var keywords    = ''
  - var style       = './css/index-sp.css'

block script
  script(charset="UTF-8" src="./app.bundle.js")
block contents
  main#main
    .menu__overlay(style='display:none')
    .menu__main(style='display:none')
      .menu__list
        .menu__item.menu__item__top.top__selected
        a(href='/rule').menu__item.menu__item__summary
        .menu__item.menu__item__group
        .menu__item.menu__item__history
    .navi
      a(href='https://www.facebook.com/events/484653471951567/' target='_blank').navi__facebook
        img(src='./assets/images/facebook-sp.png')
      .navi__menu.navi__menu__line

    .kv__wrapper
      img.kv__kv-sp(src='./assets/images/kv-sp.png')
      img.kv__title-sp(src='./assets/images/title-sp.png')
      img.kv__date-sp(src='./assets/images/date-sp.png')
      a(href='https://www.facebook.com/events/484653471951567/').about
        img(src='./assets/images/about-sp.png')
      .footer
        img(src='./assets/images/footer__triangle-sp.png')
        a(href='https://www.facebook.com/events/484653471951567/' target='_blank').footer__facebook
          img.announce(src='./assets/images/footer__facebook-sp.png')

