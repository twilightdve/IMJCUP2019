{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:vue/recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "no-console": 0,
    "no-alert": 0,
    "no-debugger": 1,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    ]
  }
}
